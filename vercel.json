{
  "buildCommand": "yarn build",
  "outputDirectory": "public",
  "devCommand": "yarn develop",
  "installCommand": "yarn install",
  "framework": "gatsby",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

